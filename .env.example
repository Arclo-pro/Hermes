SEO_AUDIT_LOG_BASE_URL=https://audit-log.vercel.app
SEO_COMPETITIVE_INTEL_BASE_URL=https://competitive-intel.vercel.app/api
SERP_INTELLIGENCE_BASE_URL=https://serp-intel.vercel.app
SEO_ORCHESTRATOR_BASE_URL=https://orchestrator.vercel.app
